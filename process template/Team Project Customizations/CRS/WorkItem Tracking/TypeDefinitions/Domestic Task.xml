<?xml version="1.0" encoding="utf-8"?>
<witd:WITD application="Work item type editor" version="1.0" xmlns:witd="http://schemas.microsoft.com/VisualStudio/2008/workitemtracking/typedef">
  <WORKITEMTYPE name="Domestic Task">
    <DESCRIPTION>Tracks work that needs to be done.</DESCRIPTION>
    <FIELDS>
      <FIELD name="Iteration Path" refname="System.IterationPath" type="TreePath" reportable="dimension" />
      <FIELD name="Iteration ID" refname="System.IterationId" type="Integer" />
      <FIELD name="External Link Count" refname="System.ExternalLinkCount" type="Integer" reportable="measure" formula="sum" />
      <FIELD name="Team Project" refname="System.TeamProject" type="String" reportable="dimension" />
      <FIELD name="Hyperlink Count" refname="System.HyperLinkCount" type="Integer" reportable="measure" formula="sum" />
      <FIELD name="Attached File Count" refname="System.AttachedFileCount" type="Integer" reportable="measure" formula="sum" />
      <FIELD name="Node Name" refname="System.NodeName" type="String" />
      <FIELD name="Area Path" refname="System.AreaPath" type="TreePath" reportable="dimension" />
      <FIELD name="Revised Date" refname="System.RevisedDate" type="DateTime" reportable="detail" />
      <FIELD name="Changed Date" refname="System.ChangedDate" type="DateTime" reportable="dimension" />
      <FIELD name="ID" refname="System.Id" type="Integer" reportable="dimension" />
      <FIELD name="Area ID" refname="System.AreaId" type="Integer" />
      <FIELD name="Authorized As" refname="System.AuthorizedAs" type="String" syncnamechanges="true" />
      <FIELD name="Title" refname="System.Title" type="String" reportable="dimension">
        <REQUIRED />
      </FIELD>
      <FIELD name="State" refname="System.State" type="String" reportable="dimension" />
      <FIELD name="Authorized Date" refname="System.AuthorizedDate" type="DateTime" />
      <FIELD name="Watermark" refname="System.Watermark" type="Integer" />
      <FIELD name="Rev" refname="System.Rev" type="Integer" reportable="dimension" />
      <FIELD name="Changed By" refname="System.ChangedBy" type="String" syncnamechanges="true" reportable="dimension" />
      <FIELD name="Reason" refname="System.Reason" type="String" reportable="dimension" />
      <FIELD name="Assigned To" refname="System.AssignedTo" type="String" syncnamechanges="true" reportable="dimension">
        <ALLOWEXISTINGVALUE />
        <ALLOWEDVALUES expanditems="true" filteritems="excludegroups">
          <LISTITEM value="USAC\US-HIS-TFS-CRS" />
          <LISTITEM value="[project]\Contributors" />
        </ALLOWEDVALUES>
      </FIELD>
      <FIELD name="Work Item Type" refname="System.WorkItemType" type="String" reportable="dimension" />
      <FIELD name="Created Date" refname="System.CreatedDate" type="DateTime" reportable="dimension" />
      <FIELD name="Created By" refname="System.CreatedBy" type="String" syncnamechanges="true" reportable="dimension" />
      <FIELD name="Description" refname="System.Description" type="HTML" />
      <FIELD name="History" refname="System.History" type="History" />
      <FIELD name="Related Link Count" refname="System.RelatedLinkCount" type="Integer" />
      <FIELD name="Tags" refname="System.Tags" type="PlainText" />
      <FIELD name="Remaining Work" refname="Microsoft.VSTS.Scheduling.RemainingWork" type="Double" reportable="measure" formula="sum" />
      <FIELD name="Integration Build" refname="Microsoft.VSTS.Build.IntegrationBuild" type="String" reportable="dimension">
        <SUGGESTEDVALUES expanditems="true">
          <LISTITEM value="&lt;None&gt;" />
        </SUGGESTEDVALUES>
      </FIELD>
      <FIELD name="Closed Date" refname="Microsoft.VSTS.Common.ClosedDate" type="DateTime" reportable="dimension">
        <WHENNOTCHANGED field="System.State">
          <READONLY />
        </WHENNOTCHANGED>
      </FIELD>
      <FIELD name="Completed" refname="Mmm.Scrum.Completed" type="Double" reportable="measure" formula="sum">
        <HELPTEXT>Completed work in hours</HELPTEXT>
      </FIELD>
      <FIELD name="Closed By" refname="Microsoft.VSTS.Common.ClosedBy" type="String" syncnamechanges="true" reportable="dimension">
        <HELPTEXT>Person that marked the work item as done</HELPTEXT>
      </FIELD>
      <FIELD name="Product Analyst" refname="Mmm.Scrum.ProductAnalyst" type="String" syncnamechanges="true" reportable="dimension">
        <ALLOWEXISTINGVALUE />
        <ALLOWEDVALUES expanditems="true" filteritems="excludegroups">
          <LISTITEM value="USAC\US-HIS-TFS-CRS" />
          <LISTITEM value="[project]\Contributors" />
          <LISTITEM value="Not Applicable" />
        </ALLOWEDVALUES>
      </FIELD>
      <FIELD name="Quality Analyst" refname="Mmm.Scrum.QualityAnalyst" type="String" syncnamechanges="true" reportable="dimension">
        <ALLOWEXISTINGVALUE />
        <ALLOWEDVALUES expanditems="true" filteritems="excludegroups">
          <LISTITEM value="USAC\US-HIS-TFS-CRS" />
          <LISTITEM value="[project]\Contributors" />
          <LISTITEM value="Not Applicable" />
        </ALLOWEDVALUES>
      </FIELD>
      <FIELD name="Peer Tester" refname="Mmm.Scrum.PeerTester" type="String" syncnamechanges="true" reportable="dimension">
        <ALLOWEXISTINGVALUE />
        <ALLOWEDVALUES expanditems="true" filteritems="excludegroups">
          <LISTITEM value="USAC\US-HIS-TFS-CRS" />
          <LISTITEM value="[project]\Contributors" />
          <LISTITEM value="Not Applicable" />
        </ALLOWEDVALUES>
      </FIELD>
      <FIELD name="Peer Test Effort" refname="Mmm.Scrum.PeerTestEffort" type="String" reportable="dimension">
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="0 - Not Applicable" />
          <LISTITEM value="1 - Very Low (~15 minutes)" />
          <LISTITEM value="2 - Low (~30 minutes)" />
          <LISTITEM value="4 - High (~2 hours)" />
          <LISTITEM value="5 - Very High (~4 hours)" />
          <LISTITEM value="3 - Medium (~1 hour)" />
        </ALLOWEDVALUES>
      </FIELD>
      <FIELD name="Actual Effort" refname="Mmm.Scrum.ActualEffort" type="Double" reportable="measure" formula="sum">
        <HELPTEXT>1: &lt;4 hrs; 2: &lt;8 hrs; 3: &lt;20 hrs; 5: &lt;40 hrs; 8: &lt;80 hrs; 13: &lt;160 hrs; 21: &lt;160 hrs</HELPTEXT>
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="1" />
          <LISTITEM value="2" />
          <LISTITEM value="3" />
          <LISTITEM value="5" />
          <LISTITEM value="8" />
          <LISTITEM value="13" />
          <LISTITEM value="21" />
        </ALLOWEDVALUES>
      </FIELD>
      <FIELD name="Comments" refname="Microsoft.VSTS.Common.Comments" type="HTML" />
      <FIELD name="Priority2" refname="Mmm.Scrum.Priority" type="String" reportable="dimension">
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="0 - Not Set" />
          <LISTITEM value="1 - High" />
          <LISTITEM value="2 - Medium" />
          <LISTITEM value="3 - Low" />
        </ALLOWEDVALUES>
      </FIELD>
      <FIELD name="Peer Test Status" refname="Mmm.Scrum.PeerTestStatus" type="String" reportable="dimension">
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="Failed" />
          <LISTITEM value="Passed" />
          <LISTITEM value="Not Set" />
        </ALLOWEDVALUES>
      </FIELD>
      <FIELD name="Country" refname="Microsoft.VSTS.Common.Country" type="String" reportable="dimension">
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="All [Core]" />
          <LISTITEM value="United States" />
        </ALLOWEDVALUES>
        <REQUIRED />
        <DEFAULT from="value" value="All [Core]" />
      </FIELD>
      <FIELD name="Inform Customers" refname="Mmm.Scrum.InformCustomers" type="String" reportable="dimension">
        <HELPTEXT>Communication needs to be created for this item. (e.g. eBlast, What's New, Interface communication)</HELPTEXT>
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="Yes" />
          <LISTITEM value="No" />
        </ALLOWEDVALUES>
        <DEFAULT from="value" value="No" />
      </FIELD>
    </FIELDS>
    <WORKFLOW>
      <STATES>
        <STATE value="PA - Clarifying" />
        <STATE value="SE - Ready to Start" />
        <STATE value="SE - In Progress" />
        <STATE value="SE - Testing" />
        <STATE value="QA - Testing" />
        <STATE value="QA - Complete">
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ClosedDate">
              <COPY from="field" field="System.ChangedDate" />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ClosedBy">
              <COPY from="field" field="System.ChangedBy" />
            </FIELD>
          </FIELDS>
        </STATE>
        <STATE value="Rejected" />
      </STATES>
      <TRANSITIONS>
        <TRANSITION from="" to="PA - Clarifying">
          <REASONS>
            <DEFAULTREASON value="Requires PA input" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="SE - Ready to Start" to="PA - Clarifying">
          <REASONS>
            <DEFAULTREASON value="PA input is needed" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="SE - In Progress" to="PA - Clarifying">
          <REASONS>
            <DEFAULTREASON value="PA input is needed" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="SE - Testing" to="PA - Clarifying">
          <REASONS>
            <DEFAULTREASON value="PA input is needed" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="QA - Testing" to="PA - Clarifying">
          <REASONS>
            <DEFAULTREASON value="PA input is needed" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="PA - Clarifying" to="SE - Ready to Start">
          <REASONS>
            <DEFAULTREASON value="Ready to begin development" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="SE - In Progress" to="SE - Ready to Start">
          <REASONS>
            <DEFAULTREASON value="Ready to begin development" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="SE - Testing" to="SE - Ready to Start">
          <REASONS>
            <DEFAULTREASON value="Ready to begin development" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="QA - Testing" to="SE - Ready to Start">
          <REASONS>
            <DEFAULTREASON value="Ready to begin development" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="PA - Clarifying" to="SE - In Progress">
          <REASONS>
            <DEFAULTREASON value="Development has begun" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="SE - Ready to Start" to="SE - In Progress">
          <REASONS>
            <DEFAULTREASON value="Development has begun" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="SE - Testing" to="SE - In Progress">
          <REASONS>
            <DEFAULTREASON value="Development has begun" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="QA - Testing" to="SE - In Progress">
          <REASONS>
            <DEFAULTREASON value="Development has begun" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="PA - Clarifying" to="SE - Testing">
          <REASONS>
            <DEFAULTREASON value="SE is testing the changes" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="SE - Ready to Start" to="SE - Testing">
          <REASONS>
            <DEFAULTREASON value="SE is testing the changes" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="SE - In Progress" to="SE - Testing">
          <REASONS>
            <DEFAULTREASON value="SE is testing the changes" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="QA - Testing" to="SE - Testing">
          <REASONS>
            <DEFAULTREASON value="SE is testing the changes" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="PA - Clarifying" to="QA - Testing">
          <REASONS>
            <DEFAULTREASON value="Ready for QA testing" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="SE - Ready to Start" to="QA - Testing">
          <REASONS>
            <DEFAULTREASON value="Ready for QA testing" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="SE - In Progress" to="QA - Testing">
          <REASONS>
            <DEFAULTREASON value="Ready for QA testing" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="SE - Testing" to="QA - Testing">
          <REASONS>
            <DEFAULTREASON value="Ready for QA testing" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="Rejected" to="PA - Clarifying">
          <REASONS>
            <DEFAULTREASON value="Un-Rejected" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="PA - Clarifying" to="Rejected">
          <REASONS>
            <DEFAULTREASON value="Un-Rejected" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="SE - Ready to Start" to="Rejected">
          <REASONS>
            <DEFAULTREASON value="Un-Rejected" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="SE - In Progress" to="Rejected">
          <REASONS>
            <DEFAULTREASON value="Un-Rejected" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="SE - Testing" to="Rejected">
          <REASONS>
            <DEFAULTREASON value="Un-Rejected" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="QA - Testing" to="Rejected">
          <REASONS>
            <DEFAULTREASON value="Un-Rejected" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="QA - Complete" to="PA - Clarifying">
          <REASONS>
            <DEFAULTREASON value="PA input is needed" />
          </REASONS>
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ClosedDate">
              <EMPTY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ClosedBy">
              <EMPTY />
            </FIELD>
          </FIELDS>
        </TRANSITION>
        <TRANSITION from="PA - Clarifying" to="QA - Complete">
          <REASONS>
            <DEFAULTREASON value="QA testing is complete" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="SE - Ready to Start" to="QA - Complete">
          <REASONS>
            <DEFAULTREASON value="QA testing is complete" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="SE - In Progress" to="QA - Complete">
          <REASONS>
            <DEFAULTREASON value="QA testing is complete" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="SE - Testing" to="QA - Complete">
          <REASONS>
            <DEFAULTREASON value="QA testing is complete" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="QA - Testing" to="QA - Complete">
          <REASONS>
            <DEFAULTREASON value="QA testing is complete" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="Rejected" to="QA - Complete">
          <REASONS>
            <DEFAULTREASON value="Un-Rejected" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="QA - Complete" to="Rejected">
          <REASONS>
            <DEFAULTREASON value="Un-Rejected" />
          </REASONS>
        </TRANSITION>
      </TRANSITIONS>
    </WORKFLOW>
    <FORM>
      <Layout HideReadOnlyEmptyFields="true" HideControlBorders="false">
        <Group>
          <Column PercentWidth="100">
            <Control FieldName="System.Title" Type="FieldControl" ControlFontSize="large" EmptyText="&lt;Enter title here&gt;" LabelPosition="Left" Label="Title" LabelFontSize="large" />
            <Group>
              <Column FixedWidth="300">
                <Control FieldName="System.IterationPath" Type="WorkItemClassificationControl" Label="Ite&amp;ration" LabelPosition="Left" Margin="(0,0,10,0)" />
              </Column>
              <Column FixedWidth="300">
                <Control FieldName="System.AreaPath" Type="WorkItemClassificationControl" Label="&amp;Area" LabelPosition="Left" Margin="(0,0,10,0)" />
              </Column>
              <Column FixedWidth="175">
                <Control FieldName="Microsoft.VSTS.Common.Country" Type="FieldControl" ControlFontSize="normal" LabelPosition="Left" Label="Country" Margin="(0,0,10,0)" />
              </Column>
              <Column FixedWidth="185">
                <Control FieldName="Mmm.Scrum.InformCustomers" Type="FieldControl" Label="Inform Customers" LabelPosition="Left" />
              </Column>
            </Group>
          </Column>
        </Group>
        <Group>
          <Column FixedWidth="200">
            <Group Label="Status">
              <Column PercentWidth="100">
                <Control FieldName="System.State" Type="FieldControl" Label="Stat&amp;e" LabelPosition="Left" />
                <Control FieldName="Mmm.Scrum.Priority" Type="FieldControl" Label="Priority" LabelPosition="Left" />
              </Column>
            </Group>
          </Column>
          <Column FixedWidth="300">
            <Group Label="Assignments">
              <Column PercentWidth="100">
                <Control FieldName="System.AssignedTo" Type="FieldControl" Label="Assigned To" LabelPosition="Left" />
                <Control FieldName="Mmm.Scrum.ProductAnalyst" Type="FieldControl" Label="Product Analyst" LabelPosition="Left" />
                <Control FieldName="Mmm.Scrum.QualityAnalyst" Type="FieldControl" Label="Quality Analyst" LabelPosition="Left" />
              </Column>
            </Group>
          </Column>
          <Column FixedWidth="300">
            <Group Label="Peer Testing">
              <Column PercentWidth="100">
                <Control Type="FieldControl" LabelPosition="Left" MinimumSize="(0,0)" FieldName="Mmm.Scrum.PeerTester" Label="Peer Tester" />
                <Control FieldName="Mmm.Scrum.PeerTestEffort" Type="FieldControl" Label="Peer Test Effort" LabelPosition="Left" />
                <Control FieldName="Mmm.Scrum.PeerTestStatus" Type="FieldControl" Label="Peer Test Status" LabelPosition="Left" />
              </Column>
            </Group>
          </Column>
        </Group>
        <Group>
          <Column PercentWidth="50">
            <TabGroup>
              <Tab Label="Description">
                <Control FieldName="System.Description" Type="HtmlFieldControl" Label="" LabelPosition="Top" Dock="Fill" />
              </Tab>
            </TabGroup>
          </Column>
          <Column PercentWidth="50">
            <TabGroup Margin="(5,0,0,0)">
              <Tab Label="History">
                <Control FieldName="System.History" Type="WorkItemLogControl" Label="" LabelPosition="Top" Dock="Fill" />
              </Tab>
              <Tab Label="Links">
                <Control Type="LinksControl" Name="GeneralLinks" LabelPosition="Top">
                  <LinksControlOptions>
                    <LinkColumns>
                      <LinkColumn RefName="System.Id" />
                      <LinkColumn RefName="System.WorkItemType" />
                      <LinkColumn RefName="System.Title" />
                      <LinkColumn RefName="System.AssignedTo" />
                      <LinkColumn RefName="System.State" />
                      <LinkColumn LinkAttribute="System.Links.Comment" />
                    </LinkColumns>
                    <WorkItemLinkFilters FilterType="includeAll" />
                    <ExternalLinkFilters FilterType="includeAll" />
                    <WorkItemTypeFilters FilterType="includeAll" />
                  </LinksControlOptions>
                </Control>
              </Tab>
              <Tab Label="Attachments">
                <Control Type="AttachmentsControl" Label="" LabelPosition="Top" />
              </Tab>
            </TabGroup>
          </Column>
        </Group>
      </Layout>
    </FORM>
  </WORKITEMTYPE>
</witd:WITD>