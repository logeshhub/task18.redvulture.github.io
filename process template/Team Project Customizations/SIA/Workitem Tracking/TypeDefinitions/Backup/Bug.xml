<?xml version="1.0" encoding="utf-8"?>
<witd:WITD application="Work item type editor" version="1.0" xmlns:witd="http://schemas.microsoft.com/VisualStudio/2008/workitemtracking/typedef">
  <WORKITEMTYPE name="Bug">
    <DESCRIPTION>Acceptance Test failure.</DESCRIPTION>
    <FIELDS>
      <FIELD name="Iteration Path" refname="System.IterationPath" type="TreePath" reportable="dimension" />
      <FIELD name="Iteration ID" refname="System.IterationId" type="Integer" />
      <FIELD name="External Link Count" refname="System.ExternalLinkCount" type="Integer" reportable="measure" formula="sum" />
      <FIELD name="Team Project" refname="System.TeamProject" type="String" reportable="dimension" />
      <FIELD name="Hyperlink Count" refname="System.HyperLinkCount" type="Integer" reportable="measure" formula="sum" />
      <FIELD name="Attached File Count" refname="System.AttachedFileCount" type="Integer" reportable="measure" formula="sum" />
      <FIELD name="Node Name" refname="System.NodeName" type="String" />
      <FIELD name="Area Path" refname="System.AreaPath" type="TreePath" reportable="dimension">
        <HELPTEXT>The area of the product with which this bug is associated</HELPTEXT>
      </FIELD>
      <FIELD name="Revised Date" refname="System.RevisedDate" type="DateTime" reportable="detail" />
      <FIELD name="Changed Date" refname="System.ChangedDate" type="DateTime" reportable="dimension" />
      <FIELD name="ID" refname="System.Id" type="Integer" reportable="dimension">
        <HELPTEXT>Human readable, auto-populated numeric Id</HELPTEXT>
      </FIELD>
      <FIELD name="Area ID" refname="System.AreaId" type="Integer" />
      <FIELD name="Authorized As" refname="System.AuthorizedAs" type="String" syncnamechanges="true" />
      <FIELD name="Title" refname="System.Title" type="String" reportable="dimension">
        <HELPTEXT>Name or short description that clearly describes the details of the failure</HELPTEXT>
        <REQUIRED />
        <CANNOTLOSEVALUE />
      </FIELD>
      <FIELD name="State" refname="System.State" type="String" reportable="dimension">
        <HELPTEXT>This is the status of the Bug as selected by a team member</HELPTEXT>
      </FIELD>
      <FIELD name="Authorized Date" refname="System.AuthorizedDate" type="DateTime" />
      <FIELD name="Watermark" refname="System.Watermark" type="Integer" />
      <FIELD name="Rev" refname="System.Rev" type="Integer" reportable="dimension" />
      <FIELD name="Changed By" refname="System.ChangedBy" type="String" syncnamechanges="true" reportable="dimension" />
      <FIELD name="Reason" refname="System.Reason" type="String" reportable="dimension" />
      <FIELD name="Assigned To" refname="System.AssignedTo" type="String" syncnamechanges="true" reportable="dimension">
        <HELPTEXT>Required for MTLM support</HELPTEXT>
        <ALLOWEDVALUES expanditems="true" filteritems="excludegroups">
          <LISTITEM value="[project]\Contributors" />
          <LISTITEM value="[project]\Project Administrators" />
        </ALLOWEDVALUES>
        <REQUIRED />
      </FIELD>
      <FIELD name="Work Item Type" refname="System.WorkItemType" type="String" reportable="dimension" />
      <FIELD name="Created Date" refname="System.CreatedDate" type="DateTime" reportable="dimension" />
      <FIELD name="Created By" refname="System.CreatedBy" type="String" syncnamechanges="true" reportable="dimension" />
      <FIELD name="Description" refname="System.Description" type="HTML">
        <HELPTEXT>Detailed description of the bug</HELPTEXT>
      </FIELD>
      <FIELD name="History" refname="System.History" type="History">
        <HELPTEXT>Discussion thread and other historical information including fields that have changed, by whom and when.</HELPTEXT>
      </FIELD>
      <FIELD name="Related Link Count" refname="System.RelatedLinkCount" type="Integer" />
      <FIELD name="Tags" refname="System.Tags" type="PlainText" />
      <FIELD name="Backlog Priority" refname="Microsoft.VSTS.Common.BacklogPriority" type="Double" reportable="detail" />
      <FIELD name="Integration Build" refname="Microsoft.VSTS.Build.IntegrationBuild" type="String" reportable="dimension">
        <HELPTEXT>The build in which the bug was fixed</HELPTEXT>
        <SUGGESTEDVALUES expanditems="true">
          <LISTITEM value="&lt;None&gt;" />
        </SUGGESTEDVALUES>
      </FIELD>
      <FIELD name="Closed Date" refname="Microsoft.VSTS.Common.ClosedDate" type="DateTime" reportable="dimension">
        <WHENNOTCHANGED field="System.State">
          <READONLY />
        </WHENNOTCHANGED>
      </FIELD>
      <FIELD name="System Info" refname="Microsoft.VSTS.TCM.SystemInfo" type="HTML">
        <HELPTEXT>Test context, provided automatically by test</HELPTEXT>
      </FIELD>
      <FIELD name="Repro Steps" refname="Microsoft.VSTS.TCM.ReproSteps" type="HTML">
        <HELPTEXT>How to see the bug. End by contrasting expected with actual behavior</HELPTEXT>
      </FIELD>
      <FIELD name="Effort" refname="Microsoft.VSTS.Scheduling.Effort" type="Double" reportable="measure" formula="sum">
        <ALLOWEXISTINGVALUE />
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="1" />
          <LISTITEM value="2" />
          <LISTITEM value="0" />
          <LISTITEM value="3" />
          <LISTITEM value="5" />
          <LISTITEM value="8" />
          <LISTITEM value="13" />
          <LISTITEM value="21" />
        </ALLOWEDVALUES>
      </FIELD>
      <FIELD name="Found In" refname="Microsoft.VSTS.Build.FoundIn" type="String" reportable="dimension">
        <HELPTEXT>The build in which the bug was found</HELPTEXT>
        <SUGGESTEDVALUES expanditems="true">
          <LISTITEM value="&lt;None&gt;" />
        </SUGGESTEDVALUES>
      </FIELD>
      <FIELD name="Closed By" refname="Microsoft.VSTS.Common.ClosedBy" type="String" syncnamechanges="true" reportable="dimension">
        <WHENNOTCHANGED field="System.State">
          <ALLOWEXISTINGVALUE />
          <READONLY />
        </WHENNOTCHANGED>
      </FIELD>
      <FIELD name="Activated Date" refname="Microsoft.VSTS.Common.ActivatedDate" type="DateTime" reportable="dimension">
        <WHENNOTCHANGED field="System.State">
          <READONLY />
        </WHENNOTCHANGED>
      </FIELD>
      <FIELD name="Activated By" refname="Microsoft.VSTS.Common.ActivatedBy" type="String" syncnamechanges="true" reportable="dimension">
        <WHENNOTCHANGED field="System.State">
          <ALLOWEXISTINGVALUE />
          <READONLY />
        </WHENNOTCHANGED>
      </FIELD>
      <FIELD name="Story Points" refname="Microsoft.VSTS.Scheduling.StoryPoints" type="Double" reportable="measure" formula="sum">
        <HELPTEXT>Set by the team, this is a high level estimate of the effort required to complete this Product Backlog Item. This is in units of story points.</HELPTEXT>
        <SUGGESTEDVALUES expanditems="true">
          <LISTITEM value="1" />
          <LISTITEM value="2" />
          <LISTITEM value="0" />
          <LISTITEM value="3" />
          <LISTITEM value="5" />
          <LISTITEM value="8" />
          <LISTITEM value="13" />
          <LISTITEM value="0.5" />
          <LISTITEM value="20" />
          <LISTITEM value="40" />
          <LISTITEM value="100" />
        </SUGGESTEDVALUES>
      </FIELD>
      <FIELD name="History Date (Scrum v3)" refname="Scrum.v3.HistoryDate" type="DateTime" reportable="dimension">
        <COPY from="clock" />
        <DEFAULT from="clock" />
      </FIELD>
      <FIELD name="Documentation" refname="OSI.Documentation" type="String" reportable="dimension">
        <ALLOWEXISTINGVALUE />
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="Yes" />
          <LISTITEM value="No" />
        </ALLOWEDVALUES>
      </FIELD>
      <FIELD name="Training" refname="HIS.Training" type="String" reportable="dimension">
        <ALLOWEXISTINGVALUE />
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="Yes" />
          <LISTITEM value="No" />
        </ALLOWEDVALUES>
      </FIELD>
      <FIELD name="Testing Impact (Scrum v3)" refname="Scrum.v3.TestingImpact" type="String" reportable="dimension">
        <HELPTEXT>The testing impact of the bug (1=highest, 5=lowest)</HELPTEXT>
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="1 - Blocking" />
          <LISTITEM value="2 - Critical" />
          <LISTITEM value="3 - High" />
          <LISTITEM value="4 - Medium" />
          <LISTITEM value="5 - Low" />
          <LISTITEM value="6 - Ignored" />
        </ALLOWEDVALUES>
      </FIELD>
      <FIELD name="Replication Action Details (Scrum v3)" refname="Scrum.v3.ReplicationActionDetail" type="PlainText" />
      <FIELD name="Bug Origin" refname="Scrum.v3.BugOrigin" type="String" reportable="dimension">
        <HELPTEXT>Identifies whether this bug originated from Team Build or remain unset if from Team Explorer or through the API.</HELPTEXT>
        <DEFAULT from="value" value="User" />
      </FIELD>
      <FIELD name="Custom Priority" refname="Marty.Priority" type="String" reportable="dimension">
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="High" />
          <LISTITEM value="Medium" />
          <LISTITEM value="Low" />
        </ALLOWEDVALUES>
      </FIELD>
      <FIELD name="Testing Area" refname="CCF.TestingArea" type="String" reportable="dimension">
        <HELPTEXT>Show in which test area is bug find.</HELPTEXT>
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="Branch" />
          <LISTITEM value="Trunk" />
          <LISTITEM value="Both Trunk and Branch" />
        </ALLOWEDVALUES>
      </FIELD>
      <FIELD name="Where to fix" refname="OSI.Wheretofix" type="String" reportable="dimension">
        <HELPTEXT>In which solution to fix a bug.</HELPTEXT>
        <DEFAULT from="value" value="Not Assigned" />
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="Branch" />
          <LISTITEM value="Trunk" />
          <LISTITEM value="Not Assigned" />
          <LISTITEM value="Trunk and Branch" />
          <LISTITEM value="External" />
        </ALLOWEDVALUES>
      </FIELD>
      <FIELD name="Reported by customer" refname="OSI.ReportedByCustomer" type="String" reportable="dimension">
        <HELPTEXT>Bug reported by customer.</HELPTEXT>
        <DEFAULT from="value" value="Internally" />
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="Internally" />
          <LISTITEM value="Externally" />
        </ALLOWEDVALUES>
      </FIELD>
      <FIELD name="DefectSeverity" refname="OSI.Defect.Severity" type="String" reportable="dimension">
        <HELPTEXT>Operational Definitions for Defect Severity</HELPTEXT>
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="1 - Critical Severity" />
          <LISTITEM value="2 - Medium Severity" />
          <LISTITEM value="3 - Low Severity" />
        </ALLOWEDVALUES>
      </FIELD>
      <FIELD name="DefectImpact" refname="OSI.Defect.Impact" type="String" reportable="dimension">
        <HELPTEXT>Shows the impact for one particular or all customers.</HELPTEXT>
        <DEFAULT from="value" value="All Customers" />
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="All Customers" />
          <LISTITEM value="Reporting Customer" />
        </ALLOWEDVALUES>
      </FIELD>
      <FIELD name="Functional Area" refname="OSI.FunctionalArea" type="String" reportable="dimension">
        <HELPTEXT>Which area of the 360 app the bug is related to</HELPTEXT>
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="Interface" />
          <LISTITEM value="Worklists" />
          <LISTITEM value="Workflow" />
          <LISTITEM value="Weblink" />
          <LISTITEM value="Browser" />
          <LISTITEM value="Analytics" />
          <LISTITEM value="Logi" />
          <LISTITEM value="Reports" />
          <LISTITEM value="STS" />
          <LISTITEM value="System Tools" />
          <LISTITEM value="Searching" />
          <LISTITEM value="CDIS" />
          <LISTITEM value="System Update Tool" />
          <LISTITEM value="Database" />
        </ALLOWEDVALUES>
      </FIELD>
      <FIELD name="Support System CX#" refname="HIS.SupportSystemCX" type="String" reportable="dimension">
        <HELPTEXT>Support Escalation Ticket Number.</HELPTEXT>
      </FIELD>
    </FIELDS>
    <WORKFLOW>
      <STATES>
        <STATE value="Done" />
        <STATE value="Active">
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ClosedDate">
              <EMPTY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ClosedBy">
              <ALLOWEXISTINGVALUE />
              <EMPTY />
            </FIELD>
            <FIELD refname="System.AssignedTo">
              <DEFAULT from="currentuser" />
            </FIELD>
          </FIELDS>
        </STATE>
        <STATE value="Deferred" />
        <STATE value="Deleted" />
        <STATE value="Ready for Test" />
        <STATE value="Ignored" />
        <STATE value="Escalated" />
      </STATES>
      <TRANSITIONS>
        <TRANSITION from="Active" to="Escalated">
          <REASONS>
            <DEFAULTREASON value="External dependencies" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="Ready for Test" to="Ignored">
          <REASONS>
            <DEFAULTREASON value="Bug for Branch" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="Active" to="Ignored">
          <REASONS>
            <DEFAULTREASON value="Item has been ignored" />
          </REASONS>
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ClosedDate">
              <READONLY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ClosedBy">
              <ALLOWEXISTINGVALUE />
              <READONLY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedDate">
              <READONLY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedBy">
              <ALLOWEXISTINGVALUE />
              <READONLY />
            </FIELD>
          </FIELDS>
        </TRANSITION>
        <TRANSITION from="Deleted" to="Ignored">
          <REASONS>
            <DEFAULTREASON value="Item has been marked for restoration" />
          </REASONS>
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ClosedDate">
              <READONLY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ClosedBy">
              <ALLOWEXISTINGVALUE />
              <READONLY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedDate">
              <READONLY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedBy">
              <ALLOWEXISTINGVALUE />
              <READONLY />
            </FIELD>
          </FIELDS>
        </TRANSITION>
        <TRANSITION from="Active" to="Ready for Test">
          <REASONS>
            <DEFAULTREASON value="A fix is ready for testing" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="Deleted" to="Ready for Test">
          <REASONS>
            <DEFAULTREASON value="Item has been marked for restoration" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="Escalated" to="Active">
          <REASONS>
            <DEFAULTREASON value="External dependencies" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="Ignored" to="Active">
          <REASONS>
            <DEFAULTREASON value="Reactivated" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="Ready for Test" to="Active">
          <REASONS>
            <DEFAULTREASON value="Reactivated" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="" to="Active">
          <REASONS>
            <DEFAULTREASON value="New Bug Discovered" />
            <REASON value="Build Failure" />
          </REASONS>
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedBy">
              <ALLOWEXISTINGVALUE />
              <COPY from="currentuser" />
              <VALIDUSER />
              <REQUIRED />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedDate">
              <SERVERDEFAULT from="clock" />
            </FIELD>
          </FIELDS>
        </TRANSITION>
        <TRANSITION from="Deferred" to="Active">
          <REASONS>
            <DEFAULTREASON value="A fix is ready for testing" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="Deleted" to="Active">
          <REASONS>
            <DEFAULTREASON value="Item has been marked for restoration" />
          </REASONS>
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedBy">
              <ALLOWEXISTINGVALUE />
              <COPY from="currentuser" />
              <VALIDUSER />
              <REQUIRED />
            </FIELD>
          </FIELDS>
        </TRANSITION>
        <TRANSITION from="Ready for Test" to="Deferred">
          <REASONS>
            <DEFAULTREASON value="any reason" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="Active" to="Deferred">
          <REASONS>
            <DEFAULTREASON value="A fix is ready for testing" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="Ignored" to="Deleted">
          <REASONS>
            <DEFAULTREASON value="Item has been marked for deletion" />
          </REASONS>
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ClosedDate">
              <READONLY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ClosedBy">
              <ALLOWEXISTINGVALUE />
              <READONLY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedDate">
              <READONLY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedBy">
              <ALLOWEXISTINGVALUE />
              <READONLY />
            </FIELD>
          </FIELDS>
        </TRANSITION>
        <TRANSITION from="Ready for Test" to="Deleted">
          <REASONS>
            <DEFAULTREASON value="Item has been marked for deletion" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="Active" to="Deleted">
          <REASONS>
            <DEFAULTREASON value="Item has been marked for deletion" />
          </REASONS>
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ClosedDate">
              <READONLY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ClosedBy">
              <ALLOWEXISTINGVALUE />
              <READONLY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedDate">
              <READONLY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedBy">
              <ALLOWEXISTINGVALUE />
              <READONLY />
            </FIELD>
          </FIELDS>
        </TRANSITION>
        <TRANSITION from="Active" to="Done">
          <REASONS>
            <DEFAULTREASON value="Resolved" />
          </REASONS>
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ClosedBy">
              <ALLOWEXISTINGVALUE />
              <COPY from="currentuser" />
              <VALIDUSER />
              <REQUIRED />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ClosedDate">
              <SERVERDEFAULT from="clock" />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedDate">
              <READONLY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedBy">
              <ALLOWEXISTINGVALUE />
              <READONLY />
            </FIELD>
          </FIELDS>
        </TRANSITION>
        <TRANSITION from="Deferred" to="Done">
          <REASONS>
            <DEFAULTREASON value="A fix is ready for testing" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="Ready for Test" to="Done">
          <REASONS>
            <DEFAULTREASON value="Resolved" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="Done" to="Active">
          <REASONS>
            <DEFAULTREASON value="Reactivated" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="Done" to="Deferred">
          <REASONS>
            <DEFAULTREASON value="Item has been marked as Deferred" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="Done" to="Deleted">
          <REASONS>
            <DEFAULTREASON value="Item has been marked for deletion" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="Done" to="Ready for Test">
          <REASONS>
            <DEFAULTREASON value="Any mistake" />
          </REASONS>
        </TRANSITION>
      </TRANSITIONS>
    </WORKFLOW>
    <FORM>
      <Layout>
        <Group>
          <Column PercentWidth="100">
            <Control FieldName="System.Title" Type="FieldControl" Label="Title" LabelPosition="Left" />
          </Column>
        </Group>
        <Group>
          <Column PercentWidth="50">
            <Group Label="Status">
              <Column PercentWidth="100">
                <Control FieldName="System.State" Type="FieldControl" Label="Status" LabelPosition="Left" />
                <Control FieldName="OSI.Defect.Severity" Type="FieldControl" Label="Severity" LabelPosition="Left" />
                <Control FieldName="OSI.Defect.Impact" Type="FieldControl" Label="Impact" LabelPosition="Left" />
                <Control FieldName="Marty.Priority" Type="FieldControl" Label="Priority" LabelPosition="Left" />
                <Control FieldName="CCF.TestingArea" Type="FieldControl" Label="Testing Area" LabelPosition="Left" />
                <Control FieldName="OSI.ReportedByCustomer" Type="FieldControl" Label="Reported by customer" LabelPosition="Left" />
                <Control FieldName="HIS.SupportSystemCX" Type="FieldControl" LabelPosition="Left" label="Support System CX#" LabelPostion="Left" />
                <Control FieldName="OSI.Documentation" Type="FieldControl" Label="Documentation" LabelPosition="Left" Name="Documentation" />
                <Control FieldName="HIS.Training" Type="FieldControl" Label="Training" LabelPosition="Left" />
              </Column>
            </Group>
          </Column>
          <Column PercentWidth="50">
            <Group Label="Classification">
              <Column PercentWidth="100">
                <Control FieldName="System.AreaPath" Type="WorkItemClassificationControl" Label="Planning Area" LabelPosition="Left" />
                <Control FieldName="OSI.FunctionalArea" Type="FieldControl" Label="Functional Area" LabelPosition="Left" />
                <Control FieldName="System.IterationPath" Type="WorkItemClassificationControl" Label="Iteration" LabelPosition="Left" />
                <Control FieldName="System.AssignedTo" Type="FieldControl" Label="Assigned To" LabelPosition="Left" />
                <Control FieldName="Microsoft.VSTS.Scheduling.StoryPoints" Type="FieldControl" Label="Story Points" LabelPosition="Left" />
              </Column>
            </Group>
          </Column>
        </Group>
        <Group>
          <Column PercentWidth="50">
            <Group Label="Activated">
              <Column PercentWidth="50">
                <Control FieldName="Microsoft.VSTS.Common.ActivatedDate" Type="DateTimeControl" Label="Date found" LabelPosition="Left" />
                <Control FieldName="Microsoft.VSTS.Common.ActivatedBy" Type="FieldControl" Label="Activated by" LabelPosition="Left" />
              </Column>
            </Group>
          </Column>
          <Column PercentWidth="50">
            <Group Label="Closed">
              <Column PercentWidth="50">
                <Control FieldName="Microsoft.VSTS.Common.ClosedDate" Type="DateTimeControl" Label="Date closed" LabelPosition="Left" />
                <Control FieldName="Microsoft.VSTS.Common.ClosedBy" Type="FieldControl" Label="Closed by" LabelPosition="Left" />
              </Column>
            </Group>
          </Column>
        </Group>
        <TabGroup>
          <Tab Label="Bug Details">
            <Group>
              <Column PercentWidth="50">
                <Group Label="Found">
                  <Column PercentWidth="100">
                    <Control FieldName="Microsoft.VSTS.Build.FoundIn" Type="FieldControl" Label="In Build" LabelPosition="Left" Dock="Bottom" />
                  </Column>
                </Group>
              </Column>
              <Column PercentWidth="50">
                <Group Label="Fixed">
                  <Column PercentWidth="100">
                    <Control FieldName="Microsoft.VSTS.Build.IntegrationBuild" Type="FieldControl" Label="In Build" LabelPosition="Left" Dock="Bottom" />
                  </Column>
                </Group>
              </Column>
            </Group>
            <Group Label="Description">
              <Column PercentWidth="100">
                <Control FieldName="System.Description" Type="HtmlFieldControl" Label="Description:" LabelPosition="Top" Dock="Fill" />
              </Column>
            </Group>
          </Tab>
          <Tab Label="Bug Reproduction">
            <Group>
              <Column PercentWidth="50">
                <Control FieldName="Microsoft.VSTS.TCM.SystemInfo" Type="HtmlFieldControl" Label="System Info:" LabelPosition="Top" Dock="Fill" />
              </Column>
              <Column PercentWidth="50">
                <Control FieldName="Microsoft.VSTS.TCM.ReproSteps" Type="ReproStepsControl" Label="Steps to Reproduce" LabelPosition="Top" Dock="Fill">
                  <CustomControlOptions />
                </Control>
              </Column>
            </Group>
          </Tab>
          <Tab Label="History">
            <Group>
              <Column PercentWidth="50">
                <Group>
                  <Column PercentWidth="100">
                    <Control FieldName="System.History" Type="WorkItemLogControl" Label="History:" LabelPosition="Top" Dock="Fill" />
                  </Column>
                </Group>
              </Column>
            </Group>
          </Tab>
          <Tab Label="Fails">
            <Control Type="LinksControl" Label="The tests failed by this bug:" LabelPosition="Top" Name="LinkedAcceptanceTests">
              <LinksControlOptions>
                <LinkColumns>
                  <LinkColumn RefName="System.ID" />
                  <LinkColumn RefName="System.Links.LinkType" />
                  <LinkColumn RefName="System.WorkItemType" />
                  <LinkColumn RefName="System.Title" />
                  <LinkColumn RefName="System.State" />
                  <LinkColumn LinkAttribute="System.Links.Comment" />
                </LinkColumns>
                <WorkItemLinkFilters FilterType="include">
                  <Filter LinkType="Scrum.FailedBy" FilterOn="reversename" />
                </WorkItemLinkFilters>
                <ExternalLinkFilters FilterType="excludeAll" />
                <WorkItemTypeFilters FilterType="include">
                  <Filter WorkItemType="Acceptance Test" />
                </WorkItemTypeFilters>
              </LinksControlOptions>
            </Control>
